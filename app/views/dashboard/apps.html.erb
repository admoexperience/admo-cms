<script>
  $(function() {
    $('.app').click(function(){
      var selector = "#" + $(this).data('details');
      if ($(this).hasClass("active")){
        $(selector).slideUp();
        $(this).removeClass("active");
      } else {
        $('.details').hide(); // hide all the other app details divs
        $(selector).slideDown();
        $('.app').removeClass("active");
        $(this).addClass("active");
      }
    });
  });
</script>
