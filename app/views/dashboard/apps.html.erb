        </li>
        <li class="disabled app">
          <%= image_tag("apps/carousel.png") %>
          <h3>Party Game</h3>
          <div class="coming-soon"></div>
        </li>
        <li class="disabled app">
          <%= image_tag("apps/carousel.png") %>
          <h3>Competition</h3>
          <div class="coming-soon"></div>
        </li>
        <li class="disabled app">
          <%= image_tag("apps/carousel.png") %>
          <h3>Build your own deal</h3>
          <div class="coming-soon"></div>
        </li>
        <li class="disabled app">
          <%= image_tag("apps/carousel.png") %>
          <h3>Catalogue</h3>
          <div class="coming-soon"></div>
        </li>
      </ul>
    </div>
  </div>
</div>

<script>
  $(function() {
    $('.app').click(function(){
      var selector = "#" + $(this).data('details');
      if ($(this).hasClass("active")){
        $(selector).slideUp();
        $(this).removeClass("active");
      } else {
        $('.details').hide(); // hide all the other app details divs
        $(selector).slideDown();
        $('.app').removeClass("active");
        $(this).addClass("active");
      }
    });
  });
</script>
