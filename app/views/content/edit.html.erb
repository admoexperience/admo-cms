<script>
  $(function(){
    $('input[type=file]').bootstrapFileInput();
  });
</script>

<%= form_for @content, :url => app_content_path(:app_id=>@app.id, :id=>@content.id), :html => {:multipart => true} do |f| %>
  <%= content_thumbnail(@content) %>
  <%= f.file_field :value%>
  <%= f.submit :save, :class=>'btn btn-primary btn-block btn-large' %>
<% end %>
