<div class="devise-box sign_up">
  <div class="border-form-div">
    <h1><span>ADMO</span></h1>
    <h2>Sign up</h2>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="input-block">
        <label for="first_name" class="first_name"></label>
        <%= f.text_field :first_name, :autofocus => true, :placeholder => 'First Name' %>
      </div>
      <div class="input-block">
        <label for="last_name" class="last_name"></label>
        <%= f.text_field :last_name, :autofocus => true, :placeholder => 'Last Name' %>
      </div>
      <div class="input-block">
        <label for="company_name" class="company_name"></label>
        <%= f.text_field :company_name, :autofocus => true, :placeholder => 'Company Name' %>
      </div>
      <div class="input-block">
        <label for="email" class="email">Email</label>
        <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address' %>
      </div>
      <div class="input-block">
        <label for="password" class="password">Password</label>
        <%= f.password_field :password, :placeholder => 'Password' %>
      </div>
      <div class="input-block">
        <label for="password" class="password">Password</label>
        <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation' %>
      </div>
      <%= f.submit "Sign up",:class=>'button' %>
    <% end %>
  </div>
  <div class="hero">
    <h2>An interactive experience</br>that brings retail stores to life</h2>
  </div>
</div>
