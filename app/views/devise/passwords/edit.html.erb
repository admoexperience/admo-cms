<%= render "devise/shared/links" %>
<div class="auth-block">
  <h1><span>Resend confirmation instructions</span></h1>
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
    <div class="input-block">
      <label for="password" class="password">Password</label>
      <%= f.password_field :password, :class=>'email', :placeholder=>'Password' %>
    </div>
    <div class="input-block">
      <label for="password_confirmation" class="password">Password</label>
      <%= f.password_field :password_confirmation, :class=>'email', :placeholder=>'Confirm' %>
    </div>
    <%= f.submit "Change", :class=>'button' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

